#include<unordered_map>
int pairSum(int *arr, int n) {
	// Write your code here
    int count = 0;
    unordered_map<int, int> a;
    for(int i = 0; i < n; i++){
    	a[arr[i]] = a[arr[i]]+1;
    }
    for(int i = 0; i < n; i++){
        if(arr[i] == 0){
            int x = a[arr[i]];
            count = count + (x*(x-1))/2;
        }else if(a.count(-arr[i]) == 1){
            count = count + a[arr[i]]*a[-arr[i]];
            //a.erase(arr[i]);
        }
        a.erase(arr[i]);
    }
    return count;
}
